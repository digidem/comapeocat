{
	"name": "comapeocat",
	"version": "1.0.0-pre.7",
	"type": "module",
	"bin": {
		"comapeocat": "bin/comapeocat.mjs"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./src/index.js"
		},
		"./reader.js": {
			"types": "./dist/reader.d.ts",
			"import": "./src/reader.js"
		},
		"./writer.js": {
			"types": "./dist/writer.d.ts",
			"import": "./src/writer.js"
		},
		"./dist/schema/category.json": "./dist/schema/category.json",
		"./dist/schema/categorySelection.json": "./dist/schema/categorySelection.json",
		"./dist/schema/field.json": "./dist/schema/field.json",
		"./dist/schema/messages.json": "./dist/schema/messages.json"
	},
	"scripts": {
		"test": "node --test",
		"prepare": "husky && husky install",
		"format": "prettier --write .",
		"build:types": "tsc -p tsconfig.npm.json",
		"build:schema": "node scripts/build-json-schema.mjs",
		"build": "npm run build:types && npm run build:schema",
		"prepack": "npm run build"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"description": "A JavaScript library for reading and writing CoMapeo Categories archives (`.comapeocat`). These files package category definitions, custom fields, icons, and translations for use in [CoMapeo](https://www.comapeo.app) applications.",
	"files": [
		"dist/",
		"bin/",
		"src/"
	],
	"dependencies": {
		"@commander-js/extra-typings": "^14.0.0",
		"@inquirer/prompts": "^7.8.6",
		"archiver": "^7.0.1",
		"bcp-47": "^2.1.0",
		"commander": "^14.0.1",
		"dot-prop-extra": "^10.2.0",
		"p-event": "^7.0.0",
		"parse-json": "^8.3.0",
		"svgo": "^4.0.0",
		"valibot": "^1.1.0",
		"yauzl-promise": "^4.0.0"
	},
	"devDependencies": {
		"@comapeo/schema": "^2.1.1",
		"@eslint/js": "^9.36.0",
		"@faker-js/faker": "^10.0.0",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@tsconfig/node18": "^18.2.4",
		"@types/archiver": "^6.0.3",
		"@types/yauzl-promise": "^4.0.1",
		"@valibot/to-json-schema": "^1.3.0",
		"eslint": "^9.36.0",
		"execa": "^9.6.0",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"prettier": "3.6.2",
		"type-fest": "^5.0.1",
		"typescript": "^5.9.2",
		"valimock": "^1.4.0"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"useTabs": true,
		"importOrderSeparation": true,
		"importOrder": [
			"^node:",
			"^@?\\w",
			"^[./]"
		],
		"plugins": [
			"@trivago/prettier-plugin-sort-imports"
		]
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	},
	"directories": {
		"test": "test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/digidem/comapeocat.git"
	},
	"bugs": {
		"url": "https://github.com/digidem/comapeocat/issues"
	},
	"homepage": "https://github.com/digidem/comapeocat#readme"
}
